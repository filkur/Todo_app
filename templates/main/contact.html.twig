{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    {#{{ encore_entry_link_tags('app') }}#}
    <link href="{{ asset('/images/fontello-a4f3b1e1/fontello-a4f3b1e1/css/fontello.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="jumbotron big-banner" style="background-color: white">

        <nav class="navbar fixed-top d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3" style="background: rgba(0,0,0,0.4);">
            <a class="navbar-brand" href="{{ path('main') }}" style="font-style: italic; font-weight: 700; font-size: 30px; color: darkorange" ><img src="{{ asset('/images/logo2.png') }}" style="width: 60px;" height="60px;" alt="logo">ToDoApp!</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <nav class="my-2 my-md-0 mr-md-3">
                    <a class="btn btn-info btn-md mr-3" href="{{ path('category_index') }}">Back to service</a>
                </nav>
            {% else %}
                <nav class="my-2 my-md-0 mr-md-3">
                    <a class="navbar-brand text-light" href="{{ path('features') }}">Features</a>
                    <a class="navbar-brand text-light" href="{{ path('pricing') }}">Pricing</a>
                    <a class="navbar-brand text-light" href="{{ path('contact') }}">Contact</a>
                    <a class="btn btn-info btn-md mr-3" href="{{ path('app_login') }}">Log in</a>
                    <a class="btn btn-warning btn-md" href="{{ path('app_register') }}">Sign up</a>
                </nav>
            {% endif %}
        </nav>
    </div>

    <div class="container contact-form">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div id="title" style="text-align: center">
            <h1>Do you have any Questions?</h1>
            <h5>Fell free to contact us</h5>
        </div>
        <div class="row mt-5">
            <div class="col">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.from) }}
            </div>
            <div class="col">
                {{ form_row(form.message) }}

            </div>
        </div>
        <div class="row"> {{ form_end(form) }}
        </div>
    </div>

    <footer class="bg-dark fixed-bottom text-center text-white ">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-1">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating " href="#" role="button"
                ><i class="icon-facebook"></i
                    ></a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"
                ><i class="icon-instagram"></i
                    ></a>

                <!-- Linkedin -->
                <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"
                ><i class="icon-linkedin"></i
                    ></a>

                <!-- Github -->
                <a class="btn btn-outline-light btn-floating m-1" href="#" role="button"
                ><i class="icon-github-circled"></i
                    ></a>
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->

        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            Â© 2021 Copyright: ToDoApp.com
        </div>
        <!-- Copyright -->
    </footer>
{% endblock %}
