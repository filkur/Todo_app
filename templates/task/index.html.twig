{% extends 'base.html.twig' %}

{% block title %}Created tasks!{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">

        <h1>List of all Tasks</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Deadline</td>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.deadline|date("Y/m/d")}}</td>
                    <td>
                        <a href="#">
                            {{ task.title }}
                        </a>
                    </td>
                    <td>
                        <a class="text-danger" href="#">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
