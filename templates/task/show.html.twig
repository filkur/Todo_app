{% extends 'base.html.twig' %}

{% block title %}Todo-App! {% endblock %}

{% block body %}
    <div class="container" style="text-align: center;">
        <h1 style="margin-top: 50px; margin-bottom: 50px;">Details about task:</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>Title:</td>
                <td>Description:</td>
                <td>Deadline</td>
                <td>Set:</td>
                <td style="color: white">-</td>
                <td style="color: white">-</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.deadline|date("Y/m/d") }}</td>

                <td>
                    {{ form(form) }}
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('task_edit', {id: task.id}) }}">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('task_delete', {id: task.id}) }}">Delete</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
