{% extends 'base.html.twig' %}

{% block title %}created posts {% endblock %}

{% block body %}
    <div class="container" style="text-align: center;">
        <h1 style="margin-top: 50px; margin-bottom: 50px;">{{ category.name }} category:</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>Title:</td>
                <td>Deadline</td>
                <td>Is done?</td>
                <td>Enter below to get more details</td>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.title}}</td>
                    <td>{{ task.deadline|date("Y/m/d")}}</td>
                    <td>
                        {% if task.done%}
                            <p class="text-danger">Yes</p>
                        {% else%}
                            <p class="text-danger">No</p>
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('task.show', {id: task.id}) }}">Show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
